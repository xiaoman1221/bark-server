{
  "name": "bark-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "biome check --write",
    "format": "biome format --write",
    "test": "rstest",
    "test:watch": "rstest --watch",
    "build:node": "cross-env ENTRY=node rsbuild build",
    "build:cf": "cross-env ENTRY=cloudflare rsbuild build",
    "build:eo": "cross-env ENTRY=edgeone rsbuild build",
    "build:esa": "cross-env ENTRY=esa rsbuild build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@hono/node-server": "^1.19.8",
    "@rsbuild/core": "^1.7.1",
    "@rstest/core": "^0.7.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/fs-extra": "^11.0.4",
    "cross-env": "^10.1.0",
    "fs-extra": "^11.3.3",
    "happy-dom": "^20.0.11",
    "lint-staged": "^16.2.7",
    "nanoid": "^5.1.6",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "got": "^14.6.6",
    "hono": "^4.11.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --files-ignore-unknown=true"
    ]
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "core-js"
    ],
    "onlyBuiltDependencies": [
      "simple-git-hooks"
    ]
  }
}
